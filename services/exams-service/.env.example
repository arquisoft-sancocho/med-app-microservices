# FastAPI Exams Service Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://exams_user:exam_password@localhost:5432/exams_db

# Google Cloud Storage Configuration
GCS_BUCKET_NAME=medical-system-files
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Service Configuration
DEBUG=false
PORT=8080

# CORS Configuration
ALLOWED_HOSTS=http://localhost:3000,https://core-medical-service-*.run.app,http://localhost:8000

# Core Medical Service Integration
CORE_SERVICE_URL=http://localhost:8000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png,image/jpg,application/dicom

